<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BreakTimer.MainPage" x:Name="display">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label x:Name="lbldisplay" Text="Set The Timer"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="DarkRed"/>
            
            <Button Clicked="five_Button_OnClicked" Text="Take 5" WidthRequest="200" />
            <Button Clicked="ten_Button_OnClicked" Text="Take 10" WidthRequest="200" />
            <Button Clicked="fifteen_Button_OnClicked" Text="Take 15" WidthRequest="200" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
