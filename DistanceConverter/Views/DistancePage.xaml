<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DistanceConverter.Views.DistancePage">
    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="20,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Margin="0,5,0,0" Text="Meters" VerticalOptions="Center"/>
                <Entry Grid.Row="0" Grid.Column="2" x:Name="txtMeters" Keyboard="Numeric" TextChanged="TxtMeters_OnTextChanged"/>

                <Label Grid.Row="2" Grid.Column="0" Margin="0,5,0,0" Text="Inches" VerticalOptions="Center"/>
                <Entry Grid.Row="2" Grid.Column="2" x:Name="txtInches" Keyboard="Numeric" TextChanged="TxtInches_OnTextChanged"/>

                <Label Grid.Row="4" Grid.Column="0" Margin="0,5,0,0" Text="Feet" VerticalOptions="Center"/>
                <Entry Grid.Row="4" Grid.Column="2" x:Name="txtFeet" Keyboard="Numeric" TextChanged="TxtFeet_OnTextChanged"/>

                <Label Grid.Row="6" Grid.Column="0" Margin="0,5,0,0" Text="Yards" VerticalOptions="Center" />
                <Entry Grid.Row="6" Grid.Column="2" x:Name="txtYards" Keyboard="Numeric" TextChanged="TxtYards_OnTextChanged"/>

                <Label Grid.Row="8" Grid.Column="0" Margin="0,5,0,0" Text="Nautical" VerticalOptions="Center"/>
                <Entry Grid.Row="8" Grid.Column="2" x:Name="txtNautical" Keyboard="Numeric" TextChanged="TxtNautical_OnTextChanged"/>

                <Label Grid.Row="10" Grid.Column="0" Margin="0,5,0,0" Text="Miles" VerticalOptions="Center"/>
                <Entry Grid.Row="10" Grid.Column="2" x:Name="txtMiles" Keyboard="Numeric" TextChanged="TxtMiles_OnTextChanged"/>

                <Label Grid.Row="12" Grid.Column="0" Margin="0,5,0,0" Text="KiloMeters" VerticalOptions="Center"/>
                <Entry Grid.Row="12" Grid.Column="2" x:Name="txtKiloMeters" Keyboard="Numeric" TextChanged="TxtKiloMeters_OnTextChanged"/>

                <StackLayout Orientation="Horizontal" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="14">
                    <Button Text="Clear" HorizontalOptions="FillAndExpand" Clicked="Clear_OnClicked"/>
                    <Button Text="Convert" HorizontalOptions="FillAndExpand" Clicked="Convert_OnClicked"/>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
